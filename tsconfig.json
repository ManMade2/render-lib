{
  "compilerOptions": {
    "declaration": true,              // This generates the .d.ts files
    "declarationDir": "dist/types",   // Specify output directory for .d.ts files
    "emitDeclarationOnly": true,      // Only emit the declaration files
    "outDir": "dist",                 // Output directory for the compiled files
    "module": "ESNext",               // Module system to use
    "target": "ESNext",               // ECMAScript target version
    "esModuleInterop": true,          // Compatibility for ES module imports
    "skipLibCheck": true,             // Skips type checking of declaration files
    "moduleResolution": "node",       // How module resolution works
    "strict": true                    // Enable all strict type checking options
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
